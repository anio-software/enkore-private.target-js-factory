{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "allowArbitraryExtensions": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "skipLibCheck": false,
        "types": [
            "@types/react-dom"
        ],
        "lib": ["esnext"],
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "baseUrl": "../",
        "rootDir": "../",
        "plugins": [{
            "name": "css-modules-ts-plugin"
        }],
        "jsx": "react-jsx"
    }
}
